upstream amee-platform {
    server 127.0.0.1:8888;
}

upstream amee-platform-secure {
    server 127.0.0.1:8889;
}

server {
    listen 80;
    server_name {{ platform_server_name }};

    location / {
        proxy_pass http://amee-platform;
        proxy_set_header Host $http_host;
        proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
        proxy_redirect off;
        proxy_buffering off;

        #Ip addresses to allow
        #http://nginx.org/en/docs/http/ngx_http_access_module.html
        #allow 127.0.0.1;
        #allow 82.69.60.5;
        #deny all;
    }

    location /nginx_stub_status {
        stub_status on;
        allow 127.0.0.1;
        deny all;
    }
}

server {
   listen 443;
   server_name {{ platform_server_name }};
   ssl on;
   ssl_certificate {{ platform_ngx_ssl_cert_path }};
   ssl_certificate_key {{ platform_ngx_ssl_key_path }};

   location / {
       proxy_pass http://amee-platform-secure;
       proxy_set_header Host $http_host;
       proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
       proxy_redirect off;
       proxy_buffering off;

       #Ip addresses to allow
       #http://nginx.org/en/docs/http/ngx_http_access_module.html
       #allow 127.0.0.1;
       #allow 82.69.60.5;
       #deny all;
     }
}
